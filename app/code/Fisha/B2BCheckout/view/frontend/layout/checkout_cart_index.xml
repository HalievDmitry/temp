<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <referenceBlock name="checkout.cart.summary.title" remove="true" ifconfig="b2bcheckout/cart/hide_summary" />
    <referenceBlock name="checkout.cart.shipping" remove="true" ifconfig="b2bcheckout/cart/hide_summary" />
    <referenceBlock name="checkout.cart.coupon" remove="true" ifconfig="b2bcheckout/cart/hide_summary" />
    <referenceBlock name="checkout.cart.shortcut.buttons" remove="true" ifconfig="b2bcheckout/cart/hide_summary" />
    <referenceBlock name="checkout.cart.methods.multishipping" remove="true" ifconfig="b2bcheckout/cart/hide_summary" />

    <referenceBlock name="checkout.cart.methods.onepage.bottom">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">Fisha_B2BCheckout::checkout/onepage/link.phtml</argument>
        </action>
    </referenceBlock>

</page>
